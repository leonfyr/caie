REPEAT
    OUTPUT "Enter your exam mark"
    INPUT Mark 
    IF Mark < 40 THEN
        Grade <- "Fail"
    ELSE
        IF Mark < 60 THEN
            Grade <- "Pass"
        ELSE
            IF Mark < 80 THEN
                Grade <- "Merit"
            ELSE
                Grade <- "Distinction"
            ENDIF
        ENDIF
    ENDIF

    OUTPUT "Your grade is ", Grade

    OUTPUT "Enter another exam mark Y/N"
    INPUT Reply
UNTIL Reply <> "Y"

